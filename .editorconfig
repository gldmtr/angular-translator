# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{js,yml}}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.{html,scss,css}]
indent_style = tab
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

